{
  "name": "simple-app",
  "version": "1.0.0",
  "description": "A simple react app which demonstrates all the basic and the powerfull features without the unwanted dependencies",
  "main": "index.js",
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "watchify": "^3.11.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:js": "browserify src/index.js -t babelify > dist/bundle.js -d",
    "watch:js": "watchify src/index.js -t babelify -o dist/bundle.js -dv",
    "watch": "npm run watch:js"
  },
  "keywords": [
    "react",
    "browserify"
  ],
  "author": "sandeepkumaar.c",
  "license": "ISC"
}
